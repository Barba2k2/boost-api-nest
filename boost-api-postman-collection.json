  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-refresh token if needed",
          "const accessToken = pm.collectionVariables.get('access_token');",
          "if (!accessToken && pm.request.url.path.join('/') !== 'auth/login' && pm.request.url.path.join('/') !== 'auth/register') {",
